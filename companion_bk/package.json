{
    "name": "fortnite-replay-monitor",
    "version": "1.0.0",
    "description": "A desktop app for monitoring and processing Fortnite replay files.",
    "main": "dist/main/main.js",
    "author": "Kevin Lin",
    "license": "MIT",
    "scripts": {
        "start": "npm run dev",
        "dev": "npm run build:main && parcel src/renderer/index.html --dist-dir dist --public-url ./ --no-hmr & wait-on dist/index.html && electron .",
        "build": "npm run build:main && parcel build src/renderer/index.html --dist-dir dist --public-url ./ && electron-builder",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "npm run build && electron-builder --mac",
        "build:main": "tsc"
    },
    "devDependencies": {
        "electron": "^26.0.0",
        "electron-builder": "^24.0.0",
        "parcel": "^2.10.0",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "typescript": "^5.0.0",
        "wait-on": "^8.0.3"
    },
    "build": {
        "appId": "com.itskevinlin.fortnitereplaymonitor",
        "productName": "Fortnite Replay Monitor",
        "directories": {
            "buildResources": "assets"
        },
        "files": [
            "dist/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        }
    },
    "targets": {
        "default": {
            "distDir": "dist/renderer"
        }
    }
}
